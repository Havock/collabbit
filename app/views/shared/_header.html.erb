<div id="header">
	<div class="pagewidth">

		<%= yield :branding or render :partial => 'shared/branding' %>

		
		<% unless promo? %>
	    	<div id="account-status">
    		<% if @current_user && can?(:view => @instance) %>
    			Hello, <%=link_to @current_user.first_name, edit_user_path(@current_user)-%> 
    			(<%=link_to('Log Out', logout_path) -%>)
    		<% else %>
    			<%= link_to('Log In', login_path) %>
    			<%= link_to('Sign Up', signup_path) %>
    		<% end %>
    		</div>
    	<% end %>
    	
	    <% if @content_for_breadcrumbs || @instance %>
    		<div id="breadcrumbs">
    			<%= yield :breadcrumbs or link_to(@instance.short_name.capitalize, overview_url)%>
    		</div>
		<% end %>
		<%= yield :menu or render :partial => 'menu' rescue nil or render :partial => 'shared/menu' %>
		<div class="clear"></div>
	</div>
</div>

<div id="subheader">
	<div class="pagewidth">
		<div id="subheader_main">
			<h1><%= yield :subheader_title %></h1>
			<div id="buttons"><%= yield :buttons %></div>
			<div class="clear"></div>
		</div>
		<%= yield :subheader_text %>
		<% if @content_for_filters %>
    		<div id="filters">
    			<%= yield :filters %>	
    		</div>
		<% end %>
	</div>
</div>

