<% content_for :title, title(@group.name, 'Groups', @instance.short_name)%>

<% content_for :body do %>
	<%= pretty_button_if(@group.updatable?, :edit_group, edit_instance_group_type_group_path(@instance, @group.group_type, @group), 'Edit Group') %>
	<h1>Page for <%=@group.name%> Group [<%= link_to @group.group_type.name, instance_group_type_url(@instance, @group.group_type)%>]</h1>
	<%= flashes %>
	<% unless @group.users.empty? %>
		<h2>Group users:</h2>
		<ul>
			<% @group.users.each do |u| %>
				<li><%= link_to u.full_name, instance_user_url(@instance, u) %></li>
			<% end %>
		</ul>
	<% end %>
<% end %>