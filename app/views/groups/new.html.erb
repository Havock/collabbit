<% content_for :title, title('Create a group', 'Groups', @instance.short_name)%>

<% content_for :body do %>
	<%= flashes%>
	<div id="wrap">
		<h1>Create a group</h1>
	
		<%= error_messages_for :group %>
		<% form_for [@group_type, @group] do |f| -%>
			<%= f.label :name %>
			<%= f.text_field :name %>
	
			<p><%= f.submit 'Create' %></p>
		<% end %>
	</div>
<% end %>